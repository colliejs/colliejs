{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "strict": true,
    "experimentalDecorators": true,
    "target": "es6",
    "module": "ES2020",
    "jsx": "react-jsx",
    "types": ["node"],
    "esModuleInterop": true,
    "moduleResolution": "Bundler",
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "skipLibCheck": true,
    "incremental": true,
    "sourceMap": true,
    "baseUrl": "./",
    "lib": ["ESNext", "DOM"],
    "declaration": true
    // "declarationMap": true
  },

  "exclude": [
    "./node_modules",
    "./**/__tests__/",
    "./__mocks__",
    "commitlint.config.cjs",
    "**/node_modules/**",
    "**/dist/**",
    "wallaby.ts"
  ]
}
