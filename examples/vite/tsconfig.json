{
  "compilerOptions": {
    "target": "ES6",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ES2015",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "baseUrl": "./"
  },
  "exclude": [
    "node_modules",
    "dist",
    "examples",
    "packages"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ],
  "include": [
    "src",
    "collie.config.ts"
  ]
}
